{{#extends 'base'}}
{{#block 'content'}}
<h1>Shop Catalog</h1>
<h3>Admin </h3>
<a href="/products/catalog" class="btn btn-primary btn-sm">Select Pcb</a>

    <div class="row align-items-center col-3">
        <form method="GET">
            {{{form}}}
            <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
        </form>
    </div>

<div class="row ">
    <div class="card" style="width: 18rem;">
        {{#each keyboardcases}}
    <img src="..." class="card-img-top " alt="...">
    <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">{{this.name}}</li>
        <li class="list-group-item">A second item</li>
        <li class="list-group-item">A third item</li>
    </ul>
    <div class="card-body">
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
    </div>
    {{/each}}
    </div>
</div>
<table class="table">

    <thead>
        <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Brand</th>
        <th>Form Factor</th>
        <th>Keycap Profile</th>
        <th>Material</th>
        <th>Type</th>
        <th>Connection Type</th>
        <th>Keyboard Kit</th>
        <th>Description</th>
        <th>Price</th>
        <th>Stock Count</th>
        <th></th>
        </tr>
    </thead>


    <tbody>
        {{#each keyboardcases}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.brand}}
            </td>
            <td>
                {{this.category.name}}
            </td>
            <td>
                NA
            </td>
            <td>
                {{this.material}}
            </td>
            <td>
                NA
            </td>
            <td>
                NA
            </td>
            <td>
                {{this.keyboardKit}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.quantity}}
            </td>
            <td>
                <a href="/products/keyboardcase/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/keyboardcase/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>





    

</table>

{{/block}}
{{/extends}}