<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/styles.css">
    <title>Keyboard Shop</title>
</head>
<body id="body">
    {{#extends 'base'}}
{{#block 'content'}}
<div id="externalbackground">
    <div>
    <h1 id="header">Welcome, Admin.</h1>
        <a href="/users/profile" class="btn border-warning btn-md" >Back to Profile</a>
        <a href="/products/product/create" class="btn btn-warning btn-md my-3 mx-2 text-light" >Add Product</a>
        <button "searchtoggle" class="btn btn-warning text-light mx-2" type="button" data-bs-toggle="collapse" data-bs-target="#keyboardkittable" aria-expanded="false" aria-controls="collapseExample">
            Show Keyboard Kits
        </button>
        <button "searchtoggle" class="btn btn-warning text-light" type="button" data-bs-toggle="collapse" data-bs-target="#searchform" aria-expanded="false" aria-controls="collapseExample">
            Search Filter
        </button>
        
    </div>
  <div class="collapse" id="searchform">
      {{!-- Toggle for search form --}}
    <div class="card card-body" id='searchformtoggle'>
        <div class="container lg-col-4 md-col-6 col-12" id="searchForm">
            <form method="GET">
                {{{form}}}
                <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
            </form>
        </div>
    </div>
</div>
<div class="collapse" id="keyboardkittable">
    <a href="/products/keyboardkit/create" class="btn btn-primary btn-sm">Add a Keyboard Kit</a>
    <table class="table">

        <thead>
            <tr>
            <th>Id</th>
            <th>Kit Name</th>
            </tr>
        </thead>

        <tbody>
            {{#each kits}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.name}}
                </td>
                <td>
                    <a href="/products/keyboardkit/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                    <a href="/products/keyboardkit/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>

        </tbody>

        

    </table>
</div>
    <div class="container " id="cardContainer">
        <div class="row justify-content-center">
            {{!-- <link rel="stylesheet" href="/style/{{this}}"> --}}
            {{#each products}}
            <div class=" col-lg-4 col-md-12 col-12">
                <div class="card shadow-lg " id="Card"> 
                    <img src="{{this.image_url}}" class="card-img-top" alt="item-image" id="cardimage">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <p class="badge bg-warning">{{this.types.name}}</p>
                        </h6>
                        <h6 class="card-subtitle mb-2 text-muted">Brand: {{this.brand}}</h6>
                    </div>
                    <ul class="list-group list-group-flush" id="CardTable">
                        <li class="list-group-item"><h6>Subtype: {{this.subtypes.name}}</h6></li>
                        <li class="list-group-item"><h6>Form Factor: {{this.category.name}}</h6></li>
                        <li class="list-group-item">
                            <h6>Compatible with Keyboard Kit: 
                                {{#each this.keyboardkits}}
                                    <span class="badge bg-warning">{{this.name}}</span>
                                {{/each}}
                            </h6>
                        </li>
                        
                        <li class="list-group-item"><h6>Material: {{this.material}}</h6></li>
                        <li class="list-group-item"><h6>Cost: {{this.cost}}</h6></li>
                    </ul>
                    <div class="mx-3">
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <div class="card-body row">
                        <div class="col">
                            <a href="/cart/{{this.id}}/add" class="btn btn-success btn-sm">Add to cart</a>
                            <a href="/products/product/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                            
                            <a href="/products/keyboardcase/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                        <div class="col text-end mx-3">
                            <h6 class="text-muted">Stock Count</h6>
                            <h5>{{this.quantity}}</h5>
                        </div>
                    </div>
                    
                </div>
            </div>
            {{/each}}
        </div>
    </div>


</div>


{{/block}}
{{/extends}}
    
</body>
</html>

