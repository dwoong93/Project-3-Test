{{#extends 'base'}}
{{#block 'content'}}
<h1>Shop PCBs</h1>
<h3>Admin </h3>
<a href="/products/catalog" class="btn btn-primary btn-sm">Select Plate</a>

    <div class="row align-items-center col-3">
        <form method="GET">
            {{{form}}}
            <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
        </form>
    </div>
<div class="container">
    <div class="row ">
        {{#each keyboardpcb}}
        <div class="col-4 my-3">
            <div class="card shadow-sm" id="caseCard" style="height-10px">
                <img src="{{this.image_url}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.brand}}</h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><h6>Form Factor: {{this.category.name}}</h6></li>
                    <li class="list-group-item"><h6>Material: {{this.material}}</h6></li>
                    <li class="list-group-item"><h6>Cost: {{this.cost}}</h6></li>
                </ul>
                <div class="mx-3">
                    <p class="card-text">{{this.description}}</p>
                </div>
                <div class="card-body row">
                    <div class="col">
                        <a href="/products/keyboardcase/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                        <a href="/products/keyboardcase/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                    <div class="col text-end mx-3">
                        <h6 class="text-muted">Stock Count</h6>
                        <h5>{{this.quantity}}</h5>
                    </div>
                </div>
                
            </div>
        </div>
        {{/each}}
    </div>
</div>
<table class="table">

    <thead>
        <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Brand</th>
        <th>Form Factor</th>
        <th>Keycap Profile</th>
        <th>Material</th>
        <th>Type</th>
        <th>Connection Type</th>
        <th>Keyboard Kit</th>
        <th>Description</th>
        <th>Price</th>
        <th>Stock Count</th>
        <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each keyboardpcbs}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.brand}}
            </td>
            <td>
                {{this.category.name}}
            </td>
            <td>
                NA
            </td>
            <td>
                NA
            </td>
            <td>
                NA
            </td>
            <td>
                {{this.switchConnectionType}}
            </td>
            <td>
                {{this.keyboardKit}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.quantity}}
            </td>
            <td>
                <a href="/products/keyboardpcb/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/keyboardpcb/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>

{{/block}}
{{/extends}}