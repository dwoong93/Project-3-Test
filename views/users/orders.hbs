{{#extends 'base'}}
{{#block 'content'}}
<h1>Shop Catalog</h1>
<h3>Admin </h3>
<form method="GET">
    {{{form}}}
    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
</form>

<table class="table">

    <thead>
        <tr>
        <th>Order Id</th>
        <th>Customer Name</th>
        <th>Customer Id</th>
        <th>Customer E-mail</th>
        <th>Customer Contact</th>
        <th>Customer Address</th>
        <th>Product Id</th>
        <th>Quantity</th>
        </tr>
    </thead>

    <tbody>
        {{#each allOrders}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.customers.username}}
            </td>
            <td>
                {{this.customer.id}}
            </td>
            <td>
                {{this.customer.email}}
            </td>
            <td>
                {{this.customer.contact}}
            </td>
            <td>
                {{this.customer.address}}
            </td>
            
            <td>
                {{this.product_id}}
            </td>
            <td>
                {{this.quantity}}
            </td>
            
            {{!-- <td>
                <a href="/products/keyboardplate/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/keyboardplate/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td> --}}
        </tr>
        {{/each}}
    </tbody>

    </tbody>

    

</table>

{{/block}}
{{/extends}}
